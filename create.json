{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "acrName": {
            "type": "string",
            "defaultValue": "[concat('acr', uniqueString(resourceGroup().id))]"
        },
        "acrSku": {
            "type": "string",
            "defaultValue": "Standard",
            "allowedValues": [
                "Classic",
                "Basic",
                "Standard",
                "Premium"
            ]

        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"

        },
        "k8sNames": {
            "type": "array",
            "defaultValue": [
                "webbapp_dev",
                "webapp_stage"
            ]
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('acrName')]",
            "type": "Microsoft.ContainerRegistry/registries",
            "apiVersion": "2019-05-01",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('acrSku')]"
            },
            "properties": {
                "adminUserEnabled": false
            }
        },
        {
            "name": "[concat(parameters('k8sNames')[copyIndex()], uniqueString(resourceGroup().id))]",
            "type": "Microsoft.ContainerService/managedClusters",
            "apiVersion": "2020-02-01",
            "location": "[parameters('location')]",
            "properties": {
                "kubernetesVersion": "1.15.11",
                "dnsPrefix": "mossadclusters",
                "agentPoolProfiles": [
                    {
                        "name": "agentpool",
                        "count": 2,
                        "vmSize": "Standard_DS2_v2",
                        "osType": "Linux",
                        "storageProfile": "ManagedDisks"
                    }
                ],
                // "linuxProfile": {
                //     "adminUsername": "adminUserName",
                //     "ssh": {
                //         "publicKeys": [
                //             {
                //                 "keyData": "keyData"
                //             }
                //         ]
                //     }
                // },
                "servicePrincipalProfile": {
                    "clientId": "487e997c-6dd3-451f-9afe-8840af7a3b48",
                    "secret": "2ijBxCBTY3tHHgkrdBf5u0SsDEDYoSBd~_"
                }
            },
            "copy": {
                "name": "akscopy",
                "count": "[length(parameters('k8sNames'))]"
            }
        }
    ]
}
